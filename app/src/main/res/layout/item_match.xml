<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:layout_gravity="center">

    <!-- Container for the match details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Home Team Badge (10% width) -->
        <ImageView
            android:id="@+id/teamHomeBadge"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:src="@drawable/placeholder_image" />

        <!-- Home Team Name (30% width) -->
        <TextView
            android:id="@+id/teamName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Home Team"
            android:textSize="16sp"
            android:layout_weight="3"
            android:textColor="@android:color/black" 
            android:gravity="center"/>

        <!-- Match Date (Centered, 20% width) -->
        <TextView
            android:id="@+id/matchDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Match Date"
            android:textSize="12sp"
            android:textColor="#888"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

        <!-- Away Team Name (30% width) -->
        <TextView
            android:id="@+id/opponentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Away Team"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_weight="3"
            android:layout_marginStart="8dp" 
            android:gravity="center"/> 

        <!-- Away Team Badge (10% width) -->
        <ImageView
            android:id="@+id/teamAwayBadge"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/placeholder_image" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
